<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btRes"
        android:layout_width="389dp"
        android:layout_height="394dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#B5AFAF"
        android:text="@string/_0"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="@string/green"
        app:layout_constraintBottom_toTopOf="@+id/btCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btBlue"
        app:layout_constraintTop_toBottomOf="@+id/btRes"
        app:layout_constraintVertical_bias="0.507"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#F44336"
        android:text="@string/red"
        app:layout_constraintBottom_toTopOf="@+id/btCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRes"
        app:layout_constraintVertical_bias="0.507"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#2196F3"
        android:text="@string/blue"
        app:layout_constraintBottom_toTopOf="@+id/btCount"
        app:layout_constraintStart_toEndOf="@+id/btBlack"
        app:layout_constraintTop_toBottomOf="@+id/btRes"
        app:layout_constraintVertical_bias="0.507"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#121111"
        android:text="@string/black"
        app:layout_constraintBottom_toTopOf="@+id/btCount"
        app:layout_constraintStart_toEndOf="@+id/btRed"
        app:layout_constraintTop_toBottomOf="@+id/btRes"
        app:layout_constraintVertical_bias="0.507"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btCount"
        android:layout_width="354dp"
        android:layout_height="62dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="#8B6E6D6D"
        android:text="@string/count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btReset"
        android:layout_width="353dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3F51B5"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCount"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>